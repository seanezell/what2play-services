{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20,
            "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "real_name": {
            "type": "string",
            "maxLength": 100
        },
        "preferred_platform": {
            "type": "string",
            "enum": ["PC", "PlayStation", "Xbox", "Nintendo", "Mobile"]
        }
    },
    "required": ["username"],
    "additionalProperties": false
}